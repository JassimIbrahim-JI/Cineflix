@page
@model MovieAppProject.Pages.Account.Manage.ChangePasswordModel
@{
    Layout = User.IsInRole("Admin") ? "_AdminLayout" : "_Layout";
    ViewData["Title"] = "Change Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header Card -->
            <div class="card profile-header-card shadow-sm mb-4">
                <div class="card-body text-center py-4">
                    <div class="profile-avatar mb-2">
                        <i class="bi bi-shield-lock display-5 text-white"></i>
                    </div>
                    <h2 class="card-title fw-bold">Change Password</h2>
                    <p class="text-secondary">Update your account password</p>
                </div>
            </div>

            <!-- Password Change Form -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-key me-2"></i>Password Settings
                    </h5>
                </div>
                <div class="card-body">
                    @if (TempData["StatusMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["StatusMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" class="password-form">
                        <div class="form-group mb-4">
                            <label asp-for="Input.CurrentPassword" class="form-label fw-semibold">
                                <i class="bi bi-lock me-1"></i>Current Password
                            </label>
                            <input asp-for="Input.CurrentPassword" type="password"
                                   class="form-control form-control-lg"
                                   placeholder="Enter your current password" />
                            <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.NewPassword" class="form-label fw-semibold">
                                <i class="bi bi-key me-1"></i>New Password
                            </label>
                            <input asp-for="Input.NewPassword" type="password"
                                   class="form-control form-control-lg"
                                   placeholder="Enter your new password" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">
                                <i class="bi bi-key-fill me-1"></i>Confirm Password
                            </label>
                            <input asp-for="Input.ConfirmPassword" type="password"
                                   class="form-control form-control-lg"
                                   placeholder="Confirm your new password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Update Password
                            </button>
                            <a asp-page="./Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Password Tips -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightbulb me-2"></i>Password Tips
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Use at least 8 characters</li>
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Include uppercase and lowercase letters</li>
                        <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Add numbers and special characters</li>
                        <li><i class="bi bi-check text-success me-2"></i>Avoid common words and patterns</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}