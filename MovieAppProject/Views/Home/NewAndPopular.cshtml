@model MovieAppProject.Models.ViewModels.Movies.NewAndPopularViewModel

@{
    ViewData["Title"] = "New & Popular";
    var moviesInCart = ViewData["MoviesInCart"] as List<int> ?? new List<int>();
}

<div class="container py-5">
    <!-- Recently Added Section -->
    <div class="mb-5">
        <h2 class="section-title mb-4">
            <i class="bi bi-clock-history me-2"></i>Recently Added
        </h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var movie in Model.RecentMovies)
            {
                var isInCart = moviesInCart.Contains(movie.Id);

                <div class="col">
                    <div class="card h-100 movie-card">
                        <div class="card-image-container">
                            <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Title">
                            <div class="card-badge">
                                <span class="rating-badge">
                                    <i class="bi bi-star-fill"></i> @movie.Rating/5
                                </span>
                            </div>
                            <div class="card-overlay">
                                <div class="overlay-content">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        if (isInCart)
                                        {
                                            <button disabled class="btn btn-success btn-sm">
                                                <i class="bi bi-check-circle-fill"></i> In Cart
                                            </button>
                                        }else
                                        {
                                            <button type="button" data-action="add-to-cart" data-movie-id="@movie.Id" class="btn btn-primary btn-sm">
                                                <i class="bi bi-cart-plus"></i> Add to Cart
                                            </button>
                                        }
                                    }
                                    else
                                    {
                                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-sm">
                                            <i class="bi bi-cart-plus"></i> Add to Cart
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary">@movie.Genre</span>
                                <span class="text-muted small">@movie.ReleaseDate.ToString("yyyy")</span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price-tag">QAR @movie.Price.ToString("0.00")</span>
                                <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-view-details">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Popular Section -->
    <div class="mb-5">
        <h2 class="section-title mb-4">
            <i class="bi bi-star-fill me-2"></i>Popular Now
        </h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var movie in Model.PopularMovies)
            {
                <div class="col">
                    <div class="card h-100 movie-card">
                        <div class="card-image-container">
                            <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Title">
                            <div class="card-badge">
                                <span class="rating-badge">
                                    <i class="bi bi-star-fill"></i> @movie.Rating/10
                                </span>
                            </div>
                            <div class="card-overlay">
                                <div class="overlay-content">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <button type="button" data-action="add-to-cart" data-movie-id="@movie.Id" class="btn btn-primary btn-sm">
                                            <i class="bi bi-cart-plus"></i> Add to Cart
                                        </button>
                                    }
                                    else
                                    {
                                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-sm">
                                            <i class="bi bi-cart-plus"></i> Add to Cart
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary">@movie.Genre</span>
                                <span class="text-muted small">@movie.ReleaseDate.ToString("yyyy")</span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price-tag">QAR @movie.Price.ToString("0.00")</span>
                                <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-view-details">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

