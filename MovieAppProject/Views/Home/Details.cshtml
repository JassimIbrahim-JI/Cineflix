@model Movie
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using MovieAppProject.Data
@using System.Security.Claims
@inject UserManager<MovieUser> UserManager
@inject MovieDbContext _context

@{
    ViewData["Title"] = Model.Title;
    int? userRating = ViewBag.UserRating as int?;
    var moviesInCart = ViewData["MoviesInCart"] as List<int> ?? new List<int>();
}

@functions {
    public string ConvertYouTubeToEmbed(string videoUrl)
    {
        if (string.IsNullOrEmpty(videoUrl) || !videoUrl.Contains("youtube.com/watch?v="))
            return videoUrl;

        var uri = new Uri(videoUrl);
        var videoId = System.Web.HttpUtility.ParseQueryString(uri.Query)["v"];

        if (!string.IsNullOrEmpty(videoId))
        {
            return $"https://www.youtube.com/embed/{videoId}?autoplay=0&controls=1&rel=0&modestbranding=1&playsinline=1";
        }

        return videoUrl;
    }
}


<!-- Hero Section -->
<div class="movie-hero" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('@Model.ImageUrl');">
    <div class="container">
        <div class="row align-items-center min-vh-75 py-5">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">@Model.Title</h1>
                <div class="d-flex flex-wrap align-items-center gap-3 mb-4">
                    <span class="badge bg-primary fs-6">@Model.Genre</span>
                    <span class="text-white fs-5">@Model.ReleaseDate.Year</span>
                    <div class="rating-stars">
                        @for (int i = 0; i < (int)Model.Rating; i++)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        @for (int i = (int)Model.Rating; i < 5; i++)
                        {
                            <i class="bi bi-star"></i>
                        }
                        <span class="ms-1">@Model.Rating/5</span>
                    </div>
                    <span class="text-white">@Model.DurationMinutes min</span>
                </div>
                <p class="lead mb-4">@Model.Description</p>

                <div class="d-flex flex-wrap gap-2 mb-4">
                    <span class="text-white"><strong>Director:</strong> @Model.Director</span>
                </div>

                <div class="action-buttons d-flex flex-wrap gap-3">
                    @{
                        var hasPurchased = await _context.Purchases
                        .AnyAsync(p => p.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier)
                        && p.PurchaseItems.Any(pi => pi.MovieId == Model.Id));
                    }

                    <!-- For Trailer -->
                    <a asp-action="Play" asp-route-id="@Model.Id" asp-route-isTrailer="true"
                       class="btn btn-outline-light btn-lg">
                        <i class="bi bi-play-btn me-2"></i> Watch Trailer
                    </a>

                    @if (hasPurchased)
                    {
                        <a asp-action="Play" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                            <i class="bi bi-play-circle me-2"></i> Watch Now
                        </a>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Play" asp-route-id="@Model.Id" class="btn btn-warning btn-lg"
                           title="Admin preview access - no purchase required">
                            <i class="bi bi-play-circle me-2"></i> Watch as Admin
                        </a>
                    }

             
                    @if (User.Identity.IsAuthenticated && !hasPurchased)
                    {
                        var isInCart = moviesInCart.Contains(Model.Id);
                        if (isInCart)
                        {
                            <button disabled class="btn btn-success btn-sm">
                                <i class="bi bi-check-circle-fill me-2"></i> In Cart
                            </button>
                        }
                        else{
                            <button type="button" data-action="add-to-cart" data-movie-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-cart-plus me-2"></i> QAR @Model.Price.ToString("0.00")
                            </button>
                        }
                       

                        <!-- Wishlist Button -->
                        var isInWishlist = await _context.WishlistItems
                        .AnyAsync(w => w.UserId == UserManager.GetUserId(User) && w.MovieId == Model.Id);

                        @if (isInWishlist)
                        {
                            <button type="button" data-action="wishlist" data-wishlist-action="remove" data-movie-id="@Model.Id" class="btn btn-danger btn-lg">
                                <i class="bi bi-heart-fill"></i>
                            </button>
                        }
                        else
                        {
                            <button type="button" data-action="wishlist" data-wishlist-action="add" data-movie-id="@Model.Id" class="btn btn-outline-danger btn-lg">
                                <i class="bi bi-heart"></i>
                            </button>
                        }
                    }
                    else if (!User.Identity.IsAuthenticated && !hasPurchased)
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                            <i class="bi bi-cart-plus me-2"></i> QAR @Model.Price.ToString("0.00")
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-4 d-none d-lg-block">
                <div class="movie-poster-container">
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <!-- Cast Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title mb-4"><i class="bi bi-people-fill me-2"></i>Cast & Crew</h2>
            <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-4">
                @foreach (var actor in Model.MovieActors)
                {
                    <div class="col">
                        <div class="card cast-card h-100 border-0">
                            <div class="cast-image-container">
                                <img src="@actor.Actor.ImageUrl" class="card-img-top" alt="@actor.Actor.Name">
                                <div class="cast-overlay">
                                    <span class="character-name">@actor.CharacterName</span>
                                </div>
                            </div>
                            <div class="card-body text-center">
                                <h6 class="card-title mb-0">@actor.Actor.Name</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Details Section -->
    <div class="row mb-5">
        <div class="col-lg-8">
            <div class="card details-card">
                <div class="card-body">
                    <h3 class="card-title mb-4">Movie Details</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <h6 class="text-secondary">Director</h6>
                                <p>@Model.Director</p>
                            </div>
                            <div class="detail-item mb-3">
                                <h6 class="text-secondary">Release Date</h6>
                                <p>@Model.ReleaseDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <h6 class="text-secondary">Genre</h6>
                                <p>@Model.Genre</p>
                            </div>
                            <div class="detail-item mb-3">
                                <h6 class="text-secondary">Duration</h6>
                                <p>@Model.DurationMinutes minutes</p>
                            </div>
                        </div>
                    </div>
                    <div class="detail-item">
                        <h6 class="text-secondary">Synopsis</h6>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card stats-card">
                <div class="card-body text-center">
                    <div class="stat-item py-3">
                        <h2 class="display-4 fw-bold text-white">@Model.Rating.ToString("0.0")</h2>
                        <p class="text-secondary">Average Rating</p>
                        <div class="rating-stars justify-content-center">
                            @for (int i = 0; i < (int)Model.Rating; i++)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            @for (int i = (int)Model.Rating; i < 5; i++)
                            {
                                <i class="bi bi-star"></i>
                            }
                        </div>
                    </div>
                    <div class="stat-item py-3 border-top">
                        <h2 class="display-4 fw-bold text-white">@Model.Reviews.Count</h2>
                        <p class="text-secondary">Total Reviews</p>
                    </div>
                    <div class="stat-item py-3 border-top">
                        <h2 class="display-4 fw-bold text-white">QAR @Model.Price.ToString("0.00")</h2>
                        <p class="text-secondary">Purchase Price</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row">
        <div class="col-12">
            <div class="card reviews-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="section-title mb-0"><i class="bi bi-chat-square-text-fill me-2"></i>Reviews (@Model.Reviews.Count)</h2>

                    </div>

                    @if (Model.Reviews.Any())
                    {
                        <div class="reviews-container">
                            @foreach (var review in Model.Reviews.OrderByDescending(r => r.ReviewDate))
                            {
                                <div class="review-item card mb-3 border-0">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="d-flex align-items-center">
                                                <div class="reviewer-avatar bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                    <span class="text-white">@review.User?.Email?[0]</span>
                                                </div>
                                                <div>
                                                    <h5 class="card-title mb-0">@review.User?.Email</h5>
                                                    <small class="text-muted">@review.ReviewDate.ToString("MMMM dd, yyyy")</small>
                                                </div>
                                            </div>
                                            <div class="text-warning">
                                                @for (int i = 0; i < review.Rating; i++)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                @for (int i = review.Rating; i < 5; i++)
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            </div>
                                        </div>
                                        <p class="card-text">@review.Content</p>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <form asp-controller="Reviews" asp-action="Delete" method="post" class="mt-2">
                                                <input type="hidden" name="id" value="@review.Id" />
                                                <input type="hidden" name="movieId" value="@Model.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Delete Review
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-chat-square-text display-1 text-secondary"></i>
                            <h4 class="mt-3">No reviews yet</h4>
                            <p class="text-secondary">Be the first to share your thoughts about this movie!</p>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#reviewModal">
                                    <i class="bi bi-plus-circle me-2"></i>Add Review
                                </button>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary mt-2">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Login to Review
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-white border-0">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Add Your Review</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="Reviews" asp-action="Create" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="MovieId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Rating</label>
                            <div class="star-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="star" data-value="@i">☆</span>
                                }
                                <input type="hidden" id="selectedRating" name="Rating" value="@(ViewBag.UserRating ?? 0)" />
                            </div>
                        </div>



                        <div class="mb-3">
                            <label class="form-label">Your Review</label>
                            <textarea name="Content" class="form-control bg-dark text-white" rows="4" placeholder="Share your thoughts about this movie..." required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@if (User.IsInRole("Admin"))
{
    <div class="container mb-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Admin Actions</h5>
                <div class="btn-group">
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-2"></i>Edit Movie
                    </a>
                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete Movie
                    </a>
                </div>
            </div>
        </div>
    </div>
}
