@model Movie

@{
    ViewData["Title"] = (ViewData["IsTrailer"] as bool? == true) ? $"Trailer: {Model.Title}" : $"Now Playing: {Model.Title}";
    var isTrailer = ViewData["IsTrailer"] as bool? == true;
}

@functions {
    public string ConvertYouTubeToEmbed(string videoUrl)
    {
        if (string.IsNullOrEmpty(videoUrl) || !videoUrl.Contains("youtube.com/watch?v="))
            return videoUrl;

        // Extract video ID from watch URL
        var uri = new Uri(videoUrl);
        var videoId = System.Web.HttpUtility.ParseQueryString(uri.Query)["v"];

        if (!string.IsNullOrEmpty(videoId))
        {
            return $"https://www.youtube.com/embed/{videoId}?autoplay=0&controls=1&rel=0&modestbranding=1&playsinline=1";
        }

        return videoUrl;
    }
}


<div class="video-container">
 
    <div class="video-player-section">
        <div class="container">
            <div class="video-controls-top d-flex justify-content-between align-items-center mb-3">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-2"></i> Back to Details
                </a>

                <h4 class="text-white mb-0">
                    @(isTrailer ? "Watching Trailer" : "Now Playing") : @Model.Title
                </h4>
              
            </div>
            @if (isTrailer)
            {
                    <div class="ratio ratio-16x9 video-player-wrapper shadow-lg">
                    @if (!string.IsNullOrEmpty(Model.VideoUrl) && Model.VideoUrl.Contains("youtube.com"))
                    {
                        <!-- YouTube TrailerEmbed -->
                        <iframe src="@ConvertYouTubeToEmbed(Model.VideoUrl)"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                allowfullscreen
                                class="w-100 h-100"
                                title="@Model.Title Trailer">
                        </iframe>
                    }
                    else
                    {
                        <!-- MP4 Trailer-->
                        <video id="moviePlayer" data-movie-id="@Model.Id" controls class="h-100 w-100">
                            <source src="@Model.VideoUrl" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    }
                </div>
            }

            else
            {
          <div class="ratio ratio-16x9 video-player-wrapper shadow-lg">
        @if (ViewData["VideoError"] != null)
        {
            <div class="alert alert-danger d-flex align-items-center justify-content-center h-100">
                <div class="text-center">
                    <i class="bi bi-exclamation-triangle-fill display-4 text-danger mb-3"></i>
                    <h4>Video Unavailable</h4>
                    <p class="mb-3">@ViewData["VideoError"]</p>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i> Back to Details
                    </a>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.VideoUrl) && Model.VideoUrl.Contains("youtube.com"))
        {
            <!--YouTube FullMovie -->
            <iframe src="@ConvertYouTubeToEmbed(Model.VideoUrl)"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen
                    class="w-100 h-100"
                    title="@Model.Title">
            </iframe>
        }
        else
        {
            <!-- Regular Video Player -->
            <video id="moviePlayer" data-movie-id="@Model.Id" controls autoplay class="h-100 w-100" onerror="handleVideoError()">
                <source src="@Model.VideoUrl" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        }
    </div>
            }
           

            <div class="video-info mt-4">
                <div class="row">
                    <div class="col-md-8">
                        <h3 class="text-white">@Model.Title</h3>
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <span class="badge bg-primary">@Model.Genre</span>
                            <span class="badge bg-secondary">@Model.DurationMinutes min</span>
                            <span class="badge bg-success">@Model.ReleaseDate.Year</span>
                            <div class="rating-stars">
                                @for (int i = 0; i < (int)Model.Rating; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                @for (int i = (int)Model.Rating; i < 5; i++)
                                {
                                    <i class="bi bi-star"></i>
                                }
                                <span class="ms-1 text-white">@Model.Rating/5</span>
                            </div>
                        </div>
                        <p class="text-light">@Model.Description</p>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <h5 class="card-title">Movie Details</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <strong><i class="bi bi-person me-2"></i>Director:</strong>
                                        <span class="float-end">@Model.Director</span>
                                    </li>
                                    <li class="mb-2">
                                        <strong><i class="bi bi-calendar me-2"></i>Released:</strong>
                                        <span class="float-end">@Model.ReleaseDate.ToString("MMMM dd, yyyy")</span>
                                    </li>
                                    <li class="mb-2">
                                        <strong>QAR Price:</strong>
                                        <span class="float-end">QAR @Model.Price.ToString("0.00")</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

