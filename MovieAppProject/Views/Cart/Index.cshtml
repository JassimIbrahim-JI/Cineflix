@model MovieAppProject.Models.ViewModels.Carts.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-4 text-white">
                <i class="bi bi-cart3 me-2"></i>Shopping Cart
            </h1>
        </div>
    </div>

    @if (Model.CartItems.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Movie</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.Movie.ImageUrl" alt="@item.Movie.Title"
                                                         class="img-thumbnail me-3" style="width: 80px; height: 100px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="mb-1">@item.Movie.Title</h6>
                                                        <small class="text-muted">@item.Movie.Genre</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">QAR @item.Movie.Price.ToString("0.00")</td>
                                            <td class="align-middle">
                                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.MovieId" />
                                                    <div class="input-group input-group-sm" style="width: 100px;">
                                                        <input type="number" name="quantity" value="@item.Quantity" min="1"
                                                               class="form-control" onchange="this.form.submit()" />
                                                    </div>
                                                </form>
                                            </td>
                                            <td class="align-middle fw-bold">QAR @((item.Movie.Price * item.Quantity).ToString("0.00"))</td>
                                            <td class="align-middle">
                                                <button type="button" data-action="remove-from-cart" data-movie-id="@item.MovieId" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                    </a>
                       <a asp-action="Checkout" class="btn btn-success btn-lg">
                                <i class="bi bi-lock-fill me-2"></i>Complete Purchase
                      </a>

                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 100px;">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Order Summary</h5>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>QAR @Model.TotalAmount.ToString("0.00")</span>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (10%):</span>
                            <span>QAR @((Model.TotalAmount * 0.1m).ToString("0.00"))</span>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong class="text-success">QAR @((Model.TotalAmount * 1.1m).ToString("0.00"))</strong>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Your purchase includes lifetime access to the movie.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-secondary"></i>
            <h3 class="mt-3">Your cart is empty</h3>
            <p class="text-muted">Looks like you haven't added any movies to your cart yet.</p>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-film me-2"></i>Browse Movies
            </a>
        </div>
    }
</div>

