@model MovieAppProject.Models.ViewModels.Carts.CartViewModel

@{
    ViewData["Title"] = "Checkout";
    var stripePublishableKey = ViewBag.StripePublishableKey as string;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-primary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h1 class="display-5 fw-bold text-white mb-0">
                    <i class="bi bi-lock-fill me-2"></i>Checkout
                </h1>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm mb-4" style="background: var(--dark-card); border: 1px solid rgba(255,255,255,0.1);">
                        <div class="card-header" style="background: rgba(255,255,255,0.05); border-bottom: 1px solid rgba(255,255,255,0.1);">
                            <h5 class="mb-0 text-white">
                                <i class="bi bi-credit-card me-2"></i>Payment Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <form id="payment-form">
                                <input type="hidden" id="stripe-publishable-key" value="@stripePublishableKey" />

                                <div id="card-element" class="form-control py-3 mb-3"></div>
                                <div id="card-errors" class="text-danger mb-3"></div>

                                <button id="submit-button" class="btn btn-success w-100 btn-lg">
                                    <i class="bi bi-lock-fill me-2"></i>Pay Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 100px; background: var(--dark-card); border: 1px solid rgba(255,255,255,0.1);">
                        <div class="card-header">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="mb-1">Items (@Model.CartItems.Count())</h6>
                                @foreach (var item in Model.CartItems)
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>@item.Movie.Title</span>
                                        <span>QAR @((item.Movie.Price * item.Quantity).ToString("0.00"))</span>
                                    </div>
                                }
                            </div>

                            <hr style="border-color: rgba(255,255,255,0.1);">

                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>QAR @Model.TotalAmount.ToString("0.00")</span>
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (10%):</span>
                                <span>QAR @((Model.TotalAmount * 0.1m).ToString("0.00"))</span>
                            </div>

                            <hr style="border-color: rgba(255,255,255,0.1);">

                            <div class="d-flex justify-content-between mb-4">
                                <strong>Total:</strong>
                                <strong class="text-white">QAR @((Model.TotalAmount * 1.1m).ToString("0.00"))</strong>
                            </div>

                        
                            <div class="alert alert-info mt-3">
                                <i class="bi bi-shield-check me-2"></i>
                                Your payment is secure and encrypted
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>

<style>
    .btn-outline-primary:hover {
        background: var(--primary);
        color: white !important;
    }

    .form-control:focus {
        background: var(--dark-bg) !important;
        color: var(--text-primary) !important;
        border-color: var(--primary) !important;
        box-shadow: 0 0 0 0.2rem rgba(229, 9, 20, 0.25) !important;
    }
</style>
