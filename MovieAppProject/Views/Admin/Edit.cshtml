@using MovieAppProject.Models.ViewModels.Movies
@model MovieViewModel

@{
    ViewData["Title"] = "Edit Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark py-3">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Movie
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["MovieUpdated"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["MovieUpdated"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post" id="editMovieForm" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="Title" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                    <input asp-for="Title" class="form-control" />
                                </div>
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Genre" class="form-label fw-bold"></label>
                                <input asp-for="Genre" class="form-control" />
                                <span asp-validation-for="Genre" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Director" class="form-label fw-bold"></label>
                                <input asp-for="Director" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="DurationMinutes" class="form-label fw-bold"></label>
                                <input asp-for="DurationMinutes" class="form-control" type="number" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Rating" class="form-label fw-bold"></label>
                                <input asp-for="Rating" class="form-control" type="number" min="1" max="5" step="0.1" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Actors & Character Names</label>
                            <table class="table table-bordered" id="actorsTable">
                                <thead>
                                    <tr>
                                        <th>Actor</th>
                                        <th>Character Name</th>
                                        <th><button type="button" id="addActor" class="btn btn-sm btn-success">+</button></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Actors.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                <select asp-for="@Model.Actors[i].ActorId" asp-items="Model.AvailableActors" class="form-select"></select>
                                            </td>
                                            <td>
                                                <input asp-for="@Model.Actors[i].CharacterName" class="form-control" />
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-danger removeRow">x</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ReleaseDate" class="form-label fw-bold"></label>
                                <input asp-for="ReleaseDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold"></label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ImageFile" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                                    <input asp-for="ImageFile" class="form-control" type="file" id="ImageFileInput" />
                                </div>
                                <span asp-validation-for="ImageFile" class="text-danger small"></span>

                                <div class="mt-2">
                                    <img id="imagePreview"
                                         src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "#" : Model.ImageUrl)"
                                         alt="Image preview"
                                         class="img-thumbnail @(string.IsNullOrEmpty(Model.ImageUrl) ? "d-none" : "")"
                                         style="max-height: 150px;" />
                                </div>

                            </div>

                            <div class="col-md-6">
                                <label asp-for="VideoUrl" class="form-label fw-bold"></label>
                                <input asp-for="VideoUrl" class="form-control" />
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="MovieList" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
