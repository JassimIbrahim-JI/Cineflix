@model MovieAppProject.Models.ViewModels.Movies.MovieActorViewModel

@{
    ViewData["Title"] = "Create Actor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white py-3">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-plus me-2"></i>Create New Actor
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["ActorSuccess"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["ActorSuccess"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="CreateActor" method="post" id="createActorForm">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-user me-1"></i>Full Name
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-signature"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="Enter actor's full name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Birthday" class="form-label fw-bold">
                                <i class="fas fa-birthday-cake me-1"></i>Date of Birth
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="Birthday" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="Birthday" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-bold">
                                <i class="fas fa-image me-1"></i>Profile Image URL
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-link"></i></span>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/actor-image.jpg" />
                            </div>
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            <div class="mt-2">
                                <img id="ImagePreview" src="#" alt="Image preview" class="img-thumbnail d-none" style="max-height: 150px; max-width: 150px;" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Bio" class="form-label fw-bold">
                                <i class="fas fa-file-alt me-1"></i>Biography
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Brief biography about the actor"></textarea>
                            </div>
                            <span asp-validation-for="Bio" class="text-danger small"></span>
                            <div class="form-text">Optional: Add a brief biography about the actor</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="AllActors" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Actors
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Create Actor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>